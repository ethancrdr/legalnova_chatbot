{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"]
    }
  },
  "deploy": {
    "startCommand": "gunicorn -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE"
  }
}